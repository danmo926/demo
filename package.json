{
  "name": "vue3-ts-vite-starter-template",
  "description": "Vue.js 3 TypeScript / Vite starter template with Pinia, Vue Router, Tailwind and more.",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "repository": "https://github.com/kouts/vue3-ts-vite-starter-template",
  "packageManager": "pnpm@10.12.1",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-preview": "vite build && vite preview",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint-fix": "eslint --fix \"**/*.{vue,ts,js}\"",
    "test:unit": "vitest",
    "test:unit-coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "quality": "pnpm run lint && pnpm run typecheck && vitest run && pnpm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@fullhuman/vue-cli-plugin-purgecss": "^7.0.2",
    "@kouts/eslint-config": "^3.0.4",
    "@tailwindcss/vite": "^4.1.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.30",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.2",
    "@vue/compiler-sfc": "^3.5.16",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "sass": "^1.89.1",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.2",
    "vue-tsc": "^2.2.10"
  }
}